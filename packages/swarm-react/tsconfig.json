{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "~*": [
                "./*"
            ]
        },
        "target": "es2022",
        "lib": [
            "dom",
            "dom.iterable",
            "es2023"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "strict": false,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "strictNullChecks": false,
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            },
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/"
    ]
}
