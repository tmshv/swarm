{
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "target": "es2022",
        "lib": [
            "dom",
            "es2023"
        ],
        "declaration": true,
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        // "resolveJsonModule": true,
        // "isolatedModules": true,
        // "incremental": true,
        "strictNullChecks": false
    },
    "rootDir": "src",
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/"
    ]
}
